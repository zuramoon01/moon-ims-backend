{
  "name": "moon-ims-backend",
  "version": "1.0.0",
  "private": true,
  "main": "./src/app.ts",
  "type": "module",
  "scripts": {
    "start": "node dist/app.js",
    "start:dev": "node build/app.ts",
    "dev": "nodemon",
    "build": "rimraf dist && tsc",
    "build:clean": "rmdir dist /s /q",
    "format": "prettier --write .",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.1",
    "express": "^4.18.3",
    "pg": "^8.11.3",
    "socket.io": "^4.7.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.25",
    "@types/pg": "^8.11.2",
    "drizzle-kit": "^0.20.14",
    "nodemon": "^3.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
